@import "tailwindcss";

:root {
  /* Light mode colors - gov.uk inspired professional palette */
  --color-bg-primary: #ffffff;
  --color-bg-secondary: #f9fafb;
  --color-bg-tertiary: #f3f4f6;
  --color-bg-hover: #f9fafb;
  --color-bg-accent: #f0fdf4;
  
  --color-text-primary: #1f2937;
  --color-text-secondary: #4b5563;
  --color-text-tertiary: #6b7280;
  --color-text-inverse: #ffffff;
  
  --color-border-primary: #e5e7eb;
  --color-border-secondary: #d1d5db;
  --color-border-focus: #00703c;
  
  /* Primary brand - gov.uk green (trustworthy, professional) */
  --color-primary: #00703c;
  --color-primary-hover: #005a30;
  --color-primary-light: #f0fdf4;
  
  --color-success: #00703c;
  --color-success-light: #f0fdf4;
  --color-warning: #f59e0b;
  --color-warning-light: #fffbeb;
  --color-error: #d4351c;
  --color-error-light: #fef2f2;
  --color-info: #1d70b8;
  --color-info-light: #eff6ff;
  
  /* Softer, more neutral shadows for enterprise look */
  --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
  --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1);
  --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1);
  
  /* Border radius - sharper for government aesthetic */
  --radius-sm: 0.25rem;
  --radius-md: 0.375rem;
  --radius-lg: 0.5rem;
  
  --transition-fast: 120ms cubic-bezier(0.4, 0, 0.2, 1);
  --transition-base: 180ms cubic-bezier(0.4, 0, 0.2, 1);
  --transition-slow: 260ms cubic-bezier(0.4, 0, 0.2, 1);
  
  /* Spacing scale - standardized 8px grid system */
  --spacing-1: 0.5rem;   /* 8px */
  --spacing-2: 1rem;     /* 16px */
  --spacing-3: 1.5rem;   /* 24px */
  --spacing-4: 2rem;     /* 32px */
  --spacing-5: 2.5rem;   /* 40px */
  --spacing-6: 3rem;     /* 48px */
  --spacing-8: 4rem;     /* 64px */
  
  /* Container constraints */
  --container-padding-mobile: 1rem;       /* 16px */
  --container-padding-tablet: 1.5rem;     /* 24px */
  --container-padding-desktop: 2rem;      /* 32px */
  
  /* Typography scale - GOV.UK inspired (base 16px) */
  --font-size-xs: 0.75rem;     /* 12px - captions */
  --font-size-sm: 0.875rem;    /* 14px - small text */
  --font-size-base: 1rem;      /* 16px - body text */
  --font-size-lg: 1.125rem;    /* 18px - large body */
  --font-size-xl: 1.25rem;     /* 20px - small heading */
  --font-size-2xl: 1.5rem;     /* 24px - heading 3 */
  --font-size-3xl: 2rem;       /* 32px - heading 2 */
  --font-size-4xl: 3rem;       /* 48px - heading 1 */
  
  --line-height-tight: 1.25;
  --line-height-normal: 1.5;
  --line-height-relaxed: 1.75;
}

.dark {
  /* Dark mode colors - sophisticated and readable */
  --color-bg-primary: #1a1d23;
  --color-bg-secondary: #111318;
  --color-bg-tertiary: #242830;
  --color-bg-hover: #2a2e38;
  --color-bg-accent: #1a3a2e;
  
  --color-text-primary: #f9fafb;
  --color-text-secondary: #d1d5db;
  --color-text-tertiary: #9ca3af;
  --color-text-inverse: #1a1d23;
  
  --color-border-primary: #374151;
  --color-border-secondary: #4b5563;
  --color-border-focus: #5cb85c;
  
  --color-primary: #5cb85c;
  --color-primary-hover: #6fcf6f;
  --color-primary-light: #1a3a2e;
  
  --color-success: #5cb85c;
  --color-success-light: #1a3a2e;
  --color-warning: #fbbf24;
  --color-warning-light: #3d2817;
  --color-error: #f87171;
  --color-error-light: #3d1a1a;
  --color-info: #60a5fa;
  --color-info-light: #1a2d3d;
  
  --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.5);
  --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.6);
  --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.7);
}

* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

html {
  font-size: 18px;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  background-color: var(--color-bg-secondary);
  color: var(--color-text-primary);
  line-height: var(--line-height-normal);
  transition: background-color var(--transition-base), color var(--transition-base);
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  overflow-x: hidden;
}

html {
  width: 100%;
  height: 100%;
  overflow-x: hidden;
}

/* Focus styles for accessibility - WCAG 2.5.5 compliant */
*:focus-visible {
  outline: 3px solid var(--color-border-focus);
  outline-offset: 2px;
}

/* Scrollbar styling */
::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

::-webkit-scrollbar-track {
  background: var(--color-bg-secondary);
}

::-webkit-scrollbar-thumb {
  background: var(--color-border-secondary);
  border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--color-text-tertiary);
}

/* Selection styling */
::selection {
  background-color: var(--color-primary-light);
  color: var(--color-text-primary);
}

/* Smooth transitions for theme switching */
* {
  transition-property: background-color, border-color, color;
  transition-duration: var(--transition-base);
  transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
}

/* Disable transitions for specific elements */
input,
textarea,
select,
button {
  transition-property: background-color, border-color, color, box-shadow, transform;
}

/* Animation keyframes */
@keyframes fade-in {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slide-up {
  from {
    transform: translateY(10px);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes slide-down {
  from {
    transform: translateY(-10px);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

@keyframes shake {
  0%, 100% {
    transform: translateX(0);
  }
  10%, 30%, 50%, 70%, 90% {
    transform: translateX(-4px);
  }
  20%, 40%, 60%, 80% {
    transform: translateX(4px);
  }
}

/* Utility classes */
.animate-fade-in {
  animation: fade-in var(--transition-base);
}

.animate-slide-up {
  animation: slide-up var(--transition-base);
}

.animate-slide-down {
  animation: slide-down var(--transition-base);
}

.animate-pulse {
  animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}

.animate-spin {
  animation: spin 1s linear infinite;
}

.animate-shake {
  animation: shake 0.5s;
}

/* Skip to main content link (accessibility) */
.skip-to-main {
  position: absolute;
  left: -9999px;
  z-index: 999;
  padding: 1rem;
  background-color: var(--color-bg-primary);
  color: var(--color-text-primary);
  text-decoration: none;
  border-radius: var(--radius-md);
}

.skip-to-main:focus {
  left: 1rem;
  top: 1rem;
}

/* Container utility classes - full width with smart margins */
.container-content {
  width: 100%;
  padding-left: var(--container-padding-mobile);
  padding-right: var(--container-padding-mobile);
}

@media (min-width: 768px) {
  .container-content {
    padding-left: var(--container-padding-tablet);
    padding-right: var(--container-padding-tablet);
  }
}

@media (min-width: 1024px) {
  .container-content {
    padding-left: var(--container-padding-desktop);
    padding-right: var(--container-padding-desktop);
  }
}

@media (min-width: 1920px) {
  .container-content {
    padding-left: var(--container-padding-ultra);
    padding-right: var(--container-padding-ultra);
  }
}

/* Typography utilities - gov.uk inspired */
.text-heading-1 {
  font-size: var(--font-size-4xl);
  line-height: var(--line-height-tight);
  font-weight: 700;
}

.text-heading-2 {
  font-size: var(--font-size-3xl);
  line-height: var(--line-height-tight);
  font-weight: 600;
}

.text-heading-3 {
  font-size: var(--font-size-2xl);
  line-height: var(--line-height-normal);
  font-weight: 600;
}

.text-body {
  font-size: var(--font-size-base);
  line-height: var(--line-height-normal);
}

.text-body-lg {
  font-size: var(--font-size-lg);
  line-height: var(--line-height-normal);
}

.text-small {
  font-size: var(--font-size-sm);
  line-height: var(--line-height-normal);
}

/* Print styles */
@media print {
  body {
    background: white;
    color: black;
  }
  
  .no-print {
    display: none !important;
  }
}
